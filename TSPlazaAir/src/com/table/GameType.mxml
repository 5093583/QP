	<s:Label  filters="{[gf01]}" id="lab_name" x="3" y="5" width="71" color="0xDFCD9A" fontSize="14" textAlign="center"/>
	<s:Label  filters="{[gf01]}" id="lab_num" x="166" y="5" width="71" color="0xDFCD9A" fontSize="14" textAlign="center"/>
	
</s:Group>
