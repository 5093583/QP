<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 creationComplete="group1_creationCompleteHandler(event)" 
		 width="400" height="204" xmlns:com="com.*">
	<fx:Script>
		<![CDATA[
			import base.SkinClass;
			
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			
			import t.cx.air.controller.Controller;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
			}
			
			private var _closed:Boolean = true;
			public function get closed():Boolean
			{
				return _closed;
			}
			public function set closed(val:Boolean):void
			{
				_closed = val;
			}
			
			
			protected function mcbutton1_clickHandler(event:MouseEvent):void
			{
				closed = true;
				PopUpManager.removePopUp(this);
				Controller.dispatchEvent("close_window_over", 2);
				Controller.dispatchEvent("exit_game");
			}
			
			protected function mcbutton2_clickHandler(event:MouseEvent):void
			{
				closed = true;
				PopUpManager.removePopUp(this);
//				Controller.dispatchEvent("close_window_over", 2);
			}
			
			protected function mcbutton3_clickHandler(event:MouseEvent):void
			{
				closed = true;
				PopUpManager.removePopUp(this);
				Controller.dispatchEvent("close_window_over", 1);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<mx:Fade id="myFadeOut" alphaFrom="0.0" alphaTo="1.0" duration="400">
		</mx:Fade>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:Image x="0" y="0" source="{SkinClass.exit_bg}"/>
	<com:MCButton x="45" y="48" targetClass="{SkinClass.exit_change}" click="mcbutton1_clickHandler(event)"/>
	<com:MCButton x="165" y="48" targetClass="{SkinClass.exit_exit}" click="mcbutton2_clickHandler(event)"/>
	<com:MCButton x="285" y="48" targetClass="{SkinClass.exit_close}" click="mcbutton3_clickHandler(event)"/>
</s:Group>
